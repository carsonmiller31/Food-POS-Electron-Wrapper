# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Configuration
APP_URL=http://localhost:3000
NODE_ENV=development

# Build Configuration
SKIP_CODE_SIGNING=true
SKIP_NOTARIZATION=true

# Windows Code Signing
WIN_CSC_LINK=path/to/certificate.p12
WIN_CSC_KEY_PASSWORD=certificate_password
# Or use installed certificate
WIN_CERT_SUBJECT_NAME="Royal Theater, Inc."
WIN_CERT_SHA1=certificate_thumbprint

# macOS Code Signing & Notarization  
MAC_CERT_NAME="Developer ID Application: Royal Theater"
APPLE_ID=your.apple.id@example.com
APPLE_ID_PASSWORD=app_specific_password
APPLE_TEAM_ID=YOUR_TEAM_ID

# Or use API Key authentication (recommended)
APPLE_API_KEY=path/to/AuthKey_KEYID.p8
APPLE_API_KEY_ID=YOUR_KEY_ID
APPLE_API_ISSUER=YOUR_ISSUER_ID

# GitHub Publishing
# Publishing is performed via GitHub CLI (gh). No token in env is required.
# Ensure you are authenticated locally: `gh auth status`
GITHUB_OWNER=royaltheater
GITHUB_REPO=pos-kiosk

# CI/CD
CI=false
