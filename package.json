{
  "name": "pos-kiosk",
  "version": "1.0.12",
  "description": "POS Kiosk Electron wrapper for Royal Theater",
  "main": "main.js",
  "homepage": "https://github.com/moviemill/pos-kiosk",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=9229",
    "build": "electron-builder",
    "build:win": "electron-builder -w",
    "build:win:clean": "rimraf dist && electron-builder -w",
    "build:mac": "electron-builder -m",
    "build:linux": "electron-builder -l",
    "build:all": "electron-builder -mwl",
    "publish": "source .env && electron-builder --publish=always",
    "publish:win": "source .env && electron-builder -w --publish always",
    "publish:mac": "source .env && electron-builder -m --publish always",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist",
    "pack": "electron-builder --dir",
    "rebuild": "electron-rebuild",
    "release:win": "bash ./release-win.sh",
    "release": "npm run release:win"
  },
  "build": {
    "appId": "com.royaltheater.poskiosk",
    "productName": "Royal Theater POS Kiosk",
    "copyright": "Copyright Â© 2024 Royal Theater",
    "icon": "kitchen-pos-logo Background Removed.png",
    "directories": {
      "output": "dist"
    },
    "compression": "maximum",
    "electronLanguages": [
      "en-US"
    ],
    "files": [
      "main.js",
      "preload.js",
      "settings.js",
      "admin-panel.html",
      "driver-setup.html",
      "update-notification.html",
      "package.json",
      "kitchen-pos-logo Background Removed.png"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "artifactName": "RoyalTheater-POS-Kiosk-Setup-${version}.${ext}",
      "extraResources": [
        {
          "from": "AURES Elite Printer Driver 4.64.exe",
          "to": "drivers"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "appx": {
      "displayName": "Royal Theater POS Kiosk",
      "identityName": "com.royaltheater.poskiosk",
      "publisherDisplayName": "Royal Theater",
      "backgroundColor": "#000000"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Royal Theater POS Kiosk"
    },
    "dmg": {
      "title": "Royal Theater POS Kiosk ${version}",
      "iconSize": 100,
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "carsonmiller31",
      "repo": "Food-POS-Electron-Wrapper",
      "private": false,
      "releaseType": "release"
    }
  },
  "keywords": [],
  "author": "Royal Theater",
  "type": "commonjs",
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^5.0.5"
  }
}
